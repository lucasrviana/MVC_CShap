@model DevIO.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FornecedorViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form class="form-row" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group col-12">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-sm-6 col-xl-4">
                <label asp-for="Documento" class="control-label"></label>
                <input asp-for="Documento" class="form-control" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>
            <div class="form-group col-12  col-sm-6 col-xl-4">
                <label asp-for="TipoFornecedor" class="control-label"></label><br />
                <input type="radio" value="1" asp-for="TipoFornecedor" checked /> Pessoa Fisica
                <input type="radio" value="2" asp-for="TipoFornecedor" /> Pessoa Jurídica
            </div>
            <div class="form-group form-check col-12" style="margin-left:1.25rem">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
